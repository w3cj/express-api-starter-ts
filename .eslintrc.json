{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": ["plugin:@typescript-eslint/recommended", "plugin:import/typescript", "prettier"],
    "plugins": ["prettier", "import", "no-relative-import-paths", "@typescript-eslint"],
    "parser": "@typescript-eslint/parser",
    "rules": {
        "import/no-default-export": ["error"],
        "import/no-unresolved": "off",
        "no-relative-import-paths/no-relative-import-paths": ["off", { "allowSameFolder": false }],
        "@typescript-eslint/no-empty-object-type": "off",
        "@typescript-eslint/no-empty-function": "off",
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/no-unused-vars": "off",
        "@typescript-eslint/no-unused-expressions": "off",
        "prettier/prettier": "off"
    },
    "settings": {
        "import/resolver": {
            "typescript": {
                "alwaysTryTypes": true
            }
        }
    }
}
